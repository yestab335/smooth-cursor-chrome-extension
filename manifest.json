{
  "name": "Smooth Cursor",
  "short_name": "Smooth Cursor",
  "version": "1.0.0",
  "manifest_version": 2,
  "description": "Apply a Microsoft Word-like smooth caret animation to multiple online text editors",
  "content_scripts": [
    {
      "matches": ["https://docs.google.com/document/*", "http://docs.google.com/document/*"],
      "js": ["scripts/google-docs.js"]
    }
  ],
 "icons": { 
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png" 
  }
}